
@{
    ViewData["Title"] = "ConsultarWF Page";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Styles/motive/fonts.css" rel="stylesheet" />
    <link href="~/Styles/motive/wfjQueryCss.css" rel="stylesheet" type="text/css" />
    <link href="~/Library/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/motive/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/motive/lakeline.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/motive/lakeline-common.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/motive/wfCss.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/motive/customStyle.css" rel="stylesheet" type="text/css" />
}



<form id="form1" runat="server">
    <div id="breadcrumbRow" style="z-index: 2000;">
        <div id="breadcrumb_fullHistory" style="display: none;">
            <h3>
                Workflow History
            </h3>
            <ul id="breadcrumb_fullHistory_list">
                <!-- breadcrumb full history -->
                <li class="last"></li>
            </ul>
        </div>
        <div class="breadcrumbL" onmouseover="onFullHistoryIconOver(this);" onmouseout="onFullHistoryIconOut(this);"
             onclick="showHideFullHistory();">
            <div id="breadcrumb_fullHistoryIcon">
            </div>
        </div>
        <div id="breadcrumbR">
            <div id="breadcumb-area" class="breadCrumbHolder module">
                <div id="breadcrumb" class="breadCrumb module" style="">
                    <div style="position: relative; width: 100%;">
                        <div>
                            <ul>
                                <li class="first"><a href="javascript:callRestart()">Inicio</a> </li>
                                <li class="last"></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="workflow-area" style="left: 0px;">
        <form>
            <div>
            </div>
        </form>
    </div>
    <div class="buttons_first" style="padding-left: 1%; padding-top: 1%;">
        <button id="back_button" class="btn btn-default" style="display: none;">Atrás</button>
        <button id="cancel_button" class="btn btn-default d-none" data-toggle="modal" data-target="#confirmacion-suspender">Cancelar</button>
        <button type="button" id="suspend_button" class="btn btn-default d-none" data-toggle="modal" data-target="#confirmacion-suspender">Suspender</button>
        <button type="button" id="button_siguiente" class="btn btn-default d-none">Siguiente</button>
        <button type="button" id="button_reinicio" class="btn btn-default d-none">Reiniciar flujo</button>
    </div>
</form>
<div id="wait-loading" class="d-none" style="position:absolute; top:0px; left:0px; width: 100%; height: 100%; z-index: 500; background:#000000; opacity:0.6">
    <img src="~/Styles/motive/images/wait.gif" style='position: absolute; top:45%; left:45%; width:128px; height:128px' alt="" />
</div>

@*MODAL*@
<div class="modal fade" id="confirmacion-suspender" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="margin-top: 10%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Flujo suspendido</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Indique si realmente quiere suspender el flujo</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btn-confirmacion-no">No</button>
                <button type="button" class="btn btn-primary" id="btn-confirmacion-yes">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src=" https://xcvnsmp.xdev.motive.com/workflow-builder/jawrjs/gzip_N476258224/bundles/motive-profile.js" type="text/javascript"></script>
    <script src="~/Library/motive/jQuery.js" type="text/javascript"></script>
    <script src="~/Library/motive/grid.locale-es.js" type="text/javascript"></script>
    <script src="~/Library/motive/jQueryPlugins.js" type="text/javascript"></script>
    <script src="~/Library/motive/Common.js" type="text/javascript"></script>
    <script src="~/Library/motive/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Library/motive/start.js" type="text/javascript"></script>

    <script src="~/js/ConsultarWF.js"></script>
}

